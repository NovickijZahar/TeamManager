<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TeamManager.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TeamManager.UI"
    xmlns:pages="clr-namespace:TeamManager.UI.Pages"
    Title="TeamManager.UI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        Icon="home.png"/>
    <ShellContent
        Title="Team list"
        ContentTemplate="{DataTemplate pages:Teams}"
        Route="Teams" 
        Icon="team_manager.png"/>

</Shell>
